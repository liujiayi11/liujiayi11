<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.sz.gl.dao.IBookDAO" >	
    <insert id="insertbook">
	   insert into book(bookid,book_name,public_dept,book_price,public_date,book_auth,img_path,summary)
	values(#{bookid},#{bookName},#{publicDept},#{bookPrice},#{publicDate},#{bookAuth},#{imgPath},#{summary})
	</insert>
	<select id="findallbook" resultType="cn.sz.gl.pojo.Book">
		select 
			bookid, 
			book_name as bookName, 
			public_dept as publicDept, 
			book_price as bookPrice, 
			public_date as publicDate, 
			book_auth as bookAuth, 
			img_path as imgPath, 
			summary 
		from book
	</select>
	
	<select id="findBookById" parameterType="java.lang.Integer" resultType="cn.sz.gl.pojo.Book"  >
		select 
			bookid, 
			book_name as bookName, 
			public_dept as publicDept, 
			book_price as bookPrice, 
			public_date as publicDate, 
			book_auth as bookAuth, 
			img_path as imgPath, 
			summary 
		from book where bookid=#{bookid}
	</select>
	
	<select id="findPriceByBookid" parameterType="java.lang.Integer" resultType="java.lang.Double" >
		select book_price as bookPrice from book where bookid=#{bookid}
	</select>
	
	<select id="maxBookid" resultType="java.lang.Integer" >
		select max(bookid) from book
	</select>
</mapper>